<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="@dimen/vertical_margin"
      android:layout_marginLeft="@dimen/horizontal_margin"
      android:layout_marginRight="@dimen/horizontal_margin"
      android:layout_marginTop="@dimen/vertical_margin"
      android:orientation="vertical">

      <Button
          android:id="@+id/btn_kel_lingkaran"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/vertical_margin"
          android:text="keliling lingkaran" />

      <Button
          android:id="@+id/btn_luas_lingkaran"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/vertical_margin"
          android:text="luas lingkaran" />

      <Button
          android:id="@+id/btn_luas_segitiga"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/vertical_margin"
          android:text="luas segitiga" />

      <Button
          android:id="@+id/btn_luas_persegipanjang"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/vertical_margin"
          android:text="luas persegi panjang" />

      <Button
          android:id="@+id/btn_luas_trapesium"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/vertical_margin"
          android:text="luas trapesium" />

      <Button
          android:id="@+id/btn_kel_trapesium"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/vertical_margin"
          android:text="keliling trapesium" />
  </LinearLayout>

</ScrollView>